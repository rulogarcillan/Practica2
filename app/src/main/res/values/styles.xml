<resources>

    <!-- Base theme. -->
    <style name="AppBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accent</item>
        <item name="header">@style/NavHeader.Background</item>
    </style>

    <style name="AppTheme" parent="AppBase">
        <item name="header">@style/NavHeader.Background</item>
        <item name="tintIconMenu">@style/iconMenu</item>
        <item name="commentView">@style/commentView</item>
        <item name="editTextAcent">@style/editTextAcent</item>
    </style>
    <!-- End Base Theme -->

    <!-- Base theme dark. -->
    <style name="AppBaseDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorPrimaryDark">@color/primaryDarkColorDark</item>
        <item name="colorAccent">@color/accentDark</item>
        <item name="editTextAcent">@style/editTextAcentDark</item>

    </style>

    <style name="AppThemeDark" parent="AppBaseDark">
        <item name="header">@style/NavHeader.BackgroundDark</item>
        <item name="tintIconMenu">@style/iconMenuDark</item>
        <item name="commentView">@style/commentViewDark</item>
    </style>
    <!-- End Base Theme dark-->


    <declare-styleable name="customHeader">
        <attr name="header" format="reference"/>
        <attr name="tintIconMenu" format="reference"/>
        <attr name="commentView" format="reference"/>
        <attr name="editTextAcent" format="reference"/>
    </declare-styleable>

    <!-- NavHEader -->
    <style name="NavHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nav_header_height</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="NavHeader.Background" parent="NavHeader">
        <item name="android:background">@drawable/side_nav_bar</item>
    </style>

    <style name="NavHeader.BackgroundDark" parent="NavHeader">
        <item name="android:background">@drawable/side_nav_bar_dark</item>
    </style>
    <!-- End NavHEader -->
    <style name="iconMenu">
        <item name="android:tint">@color/accent</item>
    </style>
    <style name="iconMenuDark">
        <item name="android:tint">@color/accentDark</item>
    </style>

    <style name="commentView">
        <item name="android:background">@color/accent</item>
    </style>
    <style name="commentViewDark">
        <item name="android:background">@color/accentDark</item>
    </style>

    <style name="editTextAcent">
        <item name="android:textColor">@color/accent</item>
    </style>
    <style name="editTextAcentDark">
        <item name="android:textColor">@color/accentDark</item>
    </style>


    <style name="buttonDialog" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="layout_marginBottom">@dimen/medium_margin</item>
        <item name="layout_marginEnd">@dimen/medium_margin</item>
        <item name="layout_marginTop">@dimen/medium_margin</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
